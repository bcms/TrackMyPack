<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunocesar.trackyourpack" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.brunocesar.trackmypack.activities.PackageListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brunocesar.trackmypack.activities.PackageAddUpdateActivity"
            android:label="@string/title_activity_package_add" >
        </activity>
        <activity
            android:name="com.brunocesar.trackmypack.activities.PackageDetailsActivity"
            android:label="@string/title_activity_package_details" >
        </activity>
    </application>

</manifest>
